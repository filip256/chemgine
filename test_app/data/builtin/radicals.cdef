:.
    Built-in Radical Definitions
.:

INCLUDE ~/atoms.cdef

_radical : * {
    name:     any radical,
    matches:  *,
};

_radical : R {
    name:     alkyl radical,
    matches:  C,
};

_radical : X {
    name:     halogen radical,
    matches:  {F, Cl, Br, At, Ts},
};

_radical : Me {
    name:     metal radical,
    matches:  {Li, Na, K, Be, Mg, Ca, Sr, Ba},
};

_radical : T1 {
    name:     test radical,
    matches:  {C, Si},
};

_radical : T2 {
    name:     test radical,
    matches:  Si,
};
